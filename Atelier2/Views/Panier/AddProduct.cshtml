@{
    ViewBag.Title = "Mon Panier";
}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6 text-primary fw-bold">
            <i class="bi bi-cart3 me-2"></i>Mon Panier
        </h1>
        @if (ViewBag.Liste.Count > 0)
        {
            <span class="badge bg-primary rounded-pill fs-6 p-2">
                @ViewBag.Liste.Count article(s)
            </span>
        }
    </div>

    @if (ViewBag.Liste.Count > 0)
    {
        <!-- Version Desktop (tableau) -->
        <div class="d-none d-md-block">
            <div class="table-responsive rounded shadow-sm">
                <table class="table table-hover mb-0">
                    <thead class="table-primary">
                        <tr>
                            <th class="ps-4">
                                <h5 class="fw-bold mb-0">Produit</h5>
                            </th>
                            <th>
                                <h5 class="fw-bold mb-0">Détails</h5>
                            </th>
                            <th class="text-end pe-4">
                                <h5 class="fw-bold mb-0">Total</h5>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.Liste)
                        {
                            <tr id="row-@item.Prod.ProductId" class="align-middle">
                                <!-- Colonne Image -->
                                <td class="ps-4" style="width: 20%;">
                                    <div class="position-relative">
                                        <img src="~/images/@item.Prod.Image"
                                             class="img-fluid rounded"
                                             style="max-height: 180px; object-fit: contain;"
                                             alt="@item.Prod.Name">
                                        @if (item.Prod.Category != null)
                                        {
                                            <span class="badge bg-info position-absolute top-0 start-0 m-2">
                                                @item.Prod.Category.CategoryName
                                            </span>
                                        }
                                    </div>
                                </td>

                                <!-- Colonne Détails -->
                                <td class="py-4">
                                    <h5 class="fw-bold text-dark mb-3">@item.Prod.Name</h5>

                                    <div class="d-flex align-items-center mb-3">
                                        <span class="text-muted me-3">Quantité :</span>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <button type="button" class="btn btn-outline-secondary MinProducts"
                                                    data-id="@item.Prod.ProductId">
                                                <i class="bi bi-dash"></i>
                                            </button>
                                            <button type="button" class="btn btn-light disabled" style="min-width: 60px; background-color: #f8f9fa;">
                                                <span id="quantite_@item.Prod.ProductId" class="fw-bold fs-6">@item.quantite</span>
                                            </button>
                                            <button type="button" class="btn btn-outline-secondary PlusProducts"
                                                    data-id="@item.Prod.ProductId">
                                                <i class="bi bi-plus"></i>
                                            </button>
                                        </div>
                                    </div>

                                    <div class="btn-group" role="group">
                                        <a href="#" class="btn btn-outline-danger btn-sm RemoveLink"
                                           data-id="@item.Prod.ProductId"
                                           title="Supprimer">
                                            <i class="bi bi-trash me-1"></i>Supprimer
                                        </a>
                                    </div>
                                </td>

                                <!-- Colonne Total -->
                                <td class="text-end pe-4">
                                    <div class="mb-2">
                                        <h5 class="fw-bold text-primary mb-0">
                                            <span id="total_@item.Prod.ProductId">@item.TotalPrice</span>
                                        </h5>
                                        <small class="text-muted">
                                            <span id="rquantite_@item.Prod.ProductId">@item.quantite</span> article(s)
                                        </small>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Version Mobile (cartes) -->
        <div class="d-block d-md-none">
            @foreach (var item in ViewBag.Liste)
            {
                <div class="card shadow-sm mb-3 border-0" id="mobile-row-@item.Prod.ProductId">
                    <div class="row g-0">
                        <div class="col-4 position-relative">
                            <img src="~/images/@item.Prod.Image"
                                 class="img-fluid rounded-start h-100"
                                 style="object-fit: cover; min-height: 150px;"
                                 alt="@item.Prod.Name">
                            @if (item.Prod.Category != null)
                            {
                                <span class="badge bg-info position-absolute top-0 start-0 m-1 small">
                                    @item.Prod.Category.CategoryName
                                </span>
                            }
                        </div>
                        <div class="col-8">
                            <div class="card-body py-3">
                                <h6 class="card-title fw-bold mb-2">@item.Prod.Name</h6>

                                <div class="d-flex align-items-center mb-2">
                                    <span class="text-muted me-2 small">Qté:</span>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <button type="button" class="btn btn-outline-secondary MinProducts"
                                                data-id="@item.Prod.ProductId">
                                            <i class="bi bi-dash"></i>
                                        </button>
                                        <button type="button" class="btn btn-light disabled" style="min-width: 40px;">
                                            <span id="mobile-quantite_@item.Prod.ProductId">@item.quantite</span>
                                        </button>
                                        <button type="button" class="btn btn-outline-secondary PlusProducts"
                                                data-id="@item.Prod.ProductId">
                                            <i class="bi bi-plus"></i>
                                        </button>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="text-primary fw-bold mb-0">
                                            <span id="mobile-total_@item.Prod.ProductId">@item.TotalPrice</span>
                                        </h6>
                                        <small class="text-muted">
                                            <span id="mobile-rquantite_@item.Prod.ProductId">@item.quantite</span> article(s)
                                        </small>
                                    </div>
                                    <a href="#" class="btn btn-outline-danger btn-sm RemoveLink"
                                       data-id="@item.Prod.ProductId">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Section Total et Actions -->
        <div class="mt-4 p-4 bg-light rounded shadow-sm">
            <div class="row align-items-center">
                <div class="col-md-8 mb-3 mb-md-0">
                    <h4 class="fw-bold mb-1">Total à payer</h4>
                    <p class="text-muted mb-0">Frais de livraison calculés à l'étape suivante</p>
                </div>
                <div class="col-md-4">
                    <div class="text-md-end">
                        <h3 class="text-primary fw-bold">@ViewBag.total</h3>
                        <div class="d-flex flex-column flex-md-row gap-2 mt-3">
                            <a href="~/Product/Index" class="btn btn-outline-primary">
                                <i class="bi bi-arrow-left me-1"></i>Continuer mes achats
                            </a>
                            <a href="~/Panier/Checkout" class="btn btn-success">
                                <i class="bi bi-lock-fill me-1"></i>Commander
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Panier vide -->
        <div class="text-center py-5 my-5">
            <div class="empty-cart mb-4">
                <div class="position-relative d-inline-block">
                    <i class="bi bi-cart-x text-light" style="font-size: 6rem;"></i>
                    <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center">
                        <i class="bi bi-cart text-muted" style="font-size: 4rem; opacity: 0.5;"></i>
                    </div>
                </div>
            </div>
            <h2 class="fw-bold text-muted mb-3">Votre panier est vide</h2>
            <p class="text-muted mb-4">Partez à la découverte de nos produits et faites-vous plaisir</p>
            <a href="~/Product/Index" class="btn btn-primary btn-lg px-4">
                <i class="bi bi-bag me-2"></i>Voir les produits
            </a>
        </div>
    }
</div>

<!-- Styles additionnels -->
<style>
    .table tbody tr {
        transition: background-color 0.2s ease;
    }

        .table tbody tr:hover {
            background-color: rgba(0, 123, 255, 0.05);
        }

    .btn-group .btn:first-child {
        border-top-right-radius: 0;
        border-bottom-right-radius: 0;
    }

    .btn-group .btn:last-child {
        border-top-left-radius: 0;
        border-bottom-left-radius: 0;
    }

    .btn-group .btn:nth-child(2) {
        border-radius: 0;
        border-left: none;
        border-right: none;
    }

    .empty-cart {
        animation: float 3s ease-in-out infinite;
    }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-10px);
        }
    }

    .card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1) !important;
        }

    .badge {
        font-size: 0.75em;
        padding: 4px 8px;
    }
</style>

<!-- Scripts -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/Monscript.js" type="text/javascript"></script>

<script>
    $(document).ready(function() {
        // Animation pour les boutons
        $('.PlusProducts, .MinProducts, .RemoveLink').hover(
            function() {
                $(this).css('transform', 'scale(1.05)');
            },
            function() {
                $(this).css('transform', 'scale(1)');
            }
        );

        // Confirmation de suppression
        $('.RemoveLink').click(function(e) {
            if (!confirm('Supprimer cet article du panier ?')) {
                e.preventDefault();
            }
        });
    });
</script>