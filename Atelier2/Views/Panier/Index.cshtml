@{
    ViewBag.Title = "Mon Panier";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <!-- En-tête avec animation -->
    <div class="page-header mb-5">
        <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
            <div class="header-title">
                <h1 class="display-4 fw-bold mb-0">
                    <span class="gradient-text">
                        <i class="bi bi-cart3 me-3"></i>Mon Panier
                    </span>
                </h1>
                <p class="text-muted mt-2 mb-0">Gérez vos articles et passez commande</p>
            </div>
            @if (ViewBag.Liste.Count > 0)
            {
                <div class="article-badge animate-pulse">
                    <span class="badge-count">@ViewBag.Liste.Count</span>
                    <span class="badge-text">article(s)</span>
                </div>
            }
        </div>
    </div>

    @if (ViewBag.Liste.Count > 0)
    {
        <div class="row g-4">
            <!-- Liste des articles -->
            <div class="col-lg-8">
                <div class="cart-items-container">
                    <div class="section-header">
                        <div class="d-flex align-items-center">
                            <div class="icon-wrapper me-3">
                                <i class="bi bi-box-seam"></i>
                            </div>
                            <div>
                                <h5 class="mb-0 fw-bold">Articles dans votre panier</h5>
                                <small class="text-muted">Modifiez les quantités ou supprimez des articles</small>
                            </div>
                        </div>
                    </div>

                    <div class="cart-items-list">
                        @{
                            var index = 0;
                        }
                        @foreach (var item in ViewBag.Liste)
                        {
                            <div class="cart-item animate-in" style="animation-delay: @(index * 0.1)s" id="row-@item.Prod.ProductId">
                                <div class="row align-items-center g-3">
                                    <!-- Image du produit -->
                                    <div class="col-md-3">
                                        <div class="product-image-wrapper">
                                            <img src="~/images/@item.Prod.Image"
                                                 class="product-img"
                                                 alt="@item.Prod.Name"
                                                 onerror="this.src='~/images/placeholder.png'">
                                            @if (item.Prod.Category != null)
                                            {
                                                <span class="category-badge">
                                                    @item.Prod.Category.CategoryName
                                                </span>
                                            }
                                        </div>
                                    </div>

                                    <!-- Détails du produit -->
                                    <div class="col-md-5">
                                        <div class="product-details">
                                            <h5 class="product-name">@item.Prod.Name</h5>

                                            <div class="price-tag">
                                                <span class="price-label">Prix unitaire</span>
                                                <span class="price-value">@item.Prod.Price DT</span>
                                            </div>

                                            <!-- Contrôles de quantité modernisés -->
                                            <div class="quantity-controls">
                                                <span class="quantity-label">Quantité</span>
                                                <div class="quantity-selector">
                                                    <button type="button" class="qty-btn minus MinProducts"
                                                            data-id="@item.Prod.ProductId">
                                                        <i class="bi bi-dash-lg"></i>
                                                    </button>
                                                    <span class="qty-value" id="quantite_@item.Prod.ProductId">@item.quantite</span>
                                                    <button type="button" class="qty-btn plus PlusProducts"
                                                            data-id="@item.Prod.ProductId">
                                                        <i class="bi bi-plus-lg"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Total et actions -->
                                    <div class="col-md-4">
                                        <div class="item-total-section">
                                            <div class="item-total">
                                                <span class="total-label">Total</span>
                                                <span class="total-value" id="total_@item.Prod.ProductId">@item.TotalPrice DT</span>
                                            </div>
                                            <small class="items-count">
                                                Pour <span id="rquantite_@item.Prod.ProductId">@item.quantite</span> article(s)
                                            </small>
                                            <button class="remove-btn RemoveLink" data-id="@item.Prod.ProductId">
                                                <i class="bi bi-trash3 me-2"></i>Supprimer
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            index++;
                        }
                    </div>
                </div>
            </div>

            <!-- Récapitulatif -->
            <div class="col-lg-4">
                <div class="order-summary sticky-lg-top" style="top: 20px;">
                    <div class="summary-header">
                        <i class="bi bi-receipt-cutoff me-2"></i>
                        Récapitulatif
                    </div>

                    <div class="summary-body">
                        <!-- Sous-total -->
                        <div class="summary-row">
                            <span class="summary-label">
                                <i class="bi bi-bag me-2"></i>Sous-total
                            </span>
                            <span class="summary-value">@ViewBag.total DT</span>
                        </div>

                        <!-- Frais de livraison -->
                        <div class="summary-row">
                            <span class="summary-label">
                                <i class="bi bi-truck me-2"></i>Livraison
                            </span>
                            <span class="summary-value free-shipping">
                                <i class="bi bi-check-circle me-1"></i>Gratuite
                            </span>
                        </div>

                        <div class="summary-divider"></div>

                        <!-- Total -->
                        <div class="summary-row total-row">
                            <span class="total-label-big">Total TTC</span>
                            <span class="total-value-big">@ViewBag.total DT</span>
                        </div>

                        <!-- Boutons d'action -->
                        <div class="action-buttons">
                            <a href="~/Panier/Checkout" class="btn-checkout">
                                <i class="bi bi-lock-fill me-2"></i>
                                Passer la commande
                                <i class="bi bi-arrow-right ms-2"></i>
                            </a>
                            <a href="~/Product/Index" class="btn-continue">
                                <i class="bi bi-arrow-left me-2"></i>
                                Continuer mes achats
                            </a>
                        </div>

                        <!-- Garanties -->
                        <div class="trust-badges">
                            <div class="trust-item">
                                <div class="trust-icon secure">
                                    <i class="bi bi-shield-lock-fill"></i>
                                </div>
                                <div class="trust-text">
                                    <strong>Paiement 100% sécurisé</strong>
                                    <span>SSL & cryptage 256-bit</span>
                                </div>
                            </div>
                            <div class="trust-item">
                                <div class="trust-icon delivery">
                                    <i class="bi bi-lightning-fill"></i>
                                </div>
                                <div class="trust-text">
                                    <strong>Livraison express</strong>
                                    <span>En 24-48h ouvrées</span>
                                </div>
                            </div>
                            <div class="trust-item">
                                <div class="trust-icon returns">
                                    <i class="bi bi-arrow-repeat"></i>
                                </div>
                                <div class="trust-text">
                                    <strong>Retours gratuits</strong>
                                    <span>Sous 30 jours</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Panier vide - Design amélioré -->
        <div class="empty-cart-container">
            <div class="empty-cart-content">
                <!-- Animation du panier vide -->
                <div class="empty-cart-animation">
                    <div class="cart-circle">
                        <div class="cart-circle-inner">
                            <i class="bi bi-cart3"></i>
                        </div>
                        <div class="floating-icons">
                            <div class="float-icon icon-1"><i class="bi bi-box"></i></div>
                            <div class="float-icon icon-2"><i class="bi bi-bag"></i></div>
                            <div class="float-icon icon-3"><i class="bi bi-gift"></i></div>
                        </div>
                    </div>
                </div>

                <!-- Texte -->
                <div class="empty-cart-text">
                    <h2 class="empty-title">
                        Votre panier est vide
                        <span class="sad-emoji">😔</span>
                    </h2>
                    <p class="empty-subtitle">
                        Explorez notre catalogue et découvrez des produits qui vous plairont !
                    </p>
                </div>

                <!-- Boutons d'action -->
                <div class="empty-cart-actions">
                    <a href="~/Product/Index" class="btn-explore">
                        <i class="bi bi-stars me-2"></i>
                        Découvrir nos produits
                        <i class="bi bi-arrow-right ms-2"></i>
                    </a>
                    <a href="~/Home/Index" class="btn-home">
                        <i class="bi bi-house-heart me-2"></i>
                        Retour à l'accueil
                    </a>
                </div>

                <!-- Suggestions -->
                <div class="suggestions-section">
                    <h6 class="suggestions-title">
                        <i class="bi bi-lightbulb me-2"></i>Pourquoi ne pas explorer ?
                    </h6>
                    <div class="suggestion-chips">
                        <a href="~/Product/Index?category=nouveautes" class="chip">
                            <i class="bi bi-star"></i> Nouveautés
                        </a>
                        <a href="~/Product/Index?category=promos" class="chip">
                            <i class="bi bi-percent"></i> Promotions
                        </a>
                        <a href="~/Product/Index?category=bestsellers" class="chip">
                            <i class="bi bi-trophy"></i> Best-sellers
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Styles améliorés -->
<style>
    /* Variables CSS */
    :root {
        --primary: #0d6efd;
        --primary-dark: #0a58ca;
        --primary-light: #e7f1ff;
        --success: #10b981;
        --danger: #ef4444;
        --warning: #f59e0b;
        --gray-100: #f8fafc;
        --gray-200: #e2e8f0;
        --gray-300: #cbd5e1;
        --gray-500: #64748b;
        --gray-700: #334155;
        --gray-900: #0f172a;
        --shadow-sm: 0 1px 2px rgba(0,0,0,0.05);
        --shadow-md: 0 4px 6px -1px rgba(0,0,0,0.1), 0 2px 4px -2px rgba(0,0,0,0.1);
        --shadow-lg: 0 10px 15px -3px rgba(0,0,0,0.1), 0 4px 6px -4px rgba(0,0,0,0.1);
        --shadow-xl: 0 20px 25px -5px rgba(0,0,0,0.1), 0 8px 10px -6px rgba(0,0,0,0.1);
        --radius-sm: 8px;
        --radius-md: 12px;
        --radius-lg: 16px;
        --radius-xl: 24px;
    }

    /* Animations */
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0) rotate(0deg);
        }

        50% {
            transform: translateY(-15px) rotate(5deg);
        }
    }

    @@keyframes pulse {
        0%, 100% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.05);
        }
    }

    @@keyframes spin {
        from {
            transform: rotate(0deg);
        }

        to {
            transform: rotate(360deg);
        }
    }

    @@keyframes floatIcon {
        0%, 100% {
            transform: translateY(0) scale(1);
            opacity: 0.7;
        }

        50% {
            transform: translateY(-10px) scale(1.1);
            opacity: 1;
        }
    }

    .animate-in {
        animation: fadeInUp 0.5s ease-out forwards;
        opacity: 0;
    }

    .animate-pulse {
        animation: pulse 2s infinite;
    }

    /* Header */
    .page-header {
        position: relative;
    }

    .gradient-text {
        background: linear-gradient(135deg, var(--primary) 0%, #6366f1 50%, #8b5cf6 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .header-title p {
        font-size: 1rem;
    }

    .article-badge {
        display: flex;
        align-items: center;
        gap: 8px;
        background: linear-gradient(135deg, var(--primary) 0%, #6366f1 100%);
        padding: 12px 20px;
        border-radius: 50px;
        color: white;
        box-shadow: var(--shadow-lg);
    }

    .badge-count {
        font-size: 1.5rem;
        font-weight: 700;
        line-height: 1;
    }

    .badge-text {
        font-size: 0.85rem;
        opacity: 0.9;
    }

    /* Cart Items Container */
    .cart-items-container {
        background: white;
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow-lg);
        overflow: hidden;
    }

    .section-header {
        padding: 20px 24px;
        background: linear-gradient(135deg, var(--gray-100) 0%, white 100%);
        border-bottom: 1px solid var(--gray-200);
    }

    .icon-wrapper {
        width: 48px;
        height: 48px;
        background: linear-gradient(135deg, var(--primary) 0%, #6366f1 100%);
        border-radius: var(--radius-md);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.25rem;
    }

    /* Cart Item */
    .cart-item {
        padding: 24px;
        border-bottom: 1px solid var(--gray-200);
        transition: all 0.3s ease;
    }

        .cart-item:hover {
            background: var(--gray-100);
        }

        .cart-item:last-child {
            border-bottom: none;
        }

    /* Product Image */
    .product-image-wrapper {
        position: relative;
        border-radius: var(--radius-md);
        overflow: hidden;
        background: var(--gray-100);
        aspect-ratio: 1;
    }

    .product-img {
        width: 100%;
        height: 100%;
        object-fit: contain;
        transition: transform 0.4s ease;
        padding: 10px;
    }

    .cart-item:hover .product-img {
        transform: scale(1.08);
    }

    .category-badge {
        position: absolute;
        top: 10px;
        left: 10px;
        background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%);
        color: white;
        padding: 4px 10px;
        border-radius: 20px;
        font-size: 0.7rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    /* Product Details */
    .product-details {
        padding: 0 10px;
    }

    .product-name {
        font-size: 1.1rem;
        font-weight: 700;
        color: var(--gray-900);
        margin-bottom: 12px;
        line-height: 1.3;
    }

    .price-tag {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 16px;
    }

    .price-label {
        font-size: 0.85rem;
        color: var(--gray-500);
    }

    .price-value {
        font-size: 1rem;
        font-weight: 700;
        color: var(--success);
        background: rgba(16, 185, 129, 0.1);
        padding: 4px 12px;
        border-radius: 20px;
    }

    /* Quantity Controls */
    .quantity-controls {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .quantity-label {
        font-size: 0.85rem;
        color: var(--gray-500);
    }

    .quantity-selector {
        display: flex;
        align-items: center;
        background: var(--gray-100);
        border-radius: 50px;
        padding: 4px;
        gap: 4px;
    }

    .qty-btn {
        width: 36px;
        height: 36px;
        border: none;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.2s ease;
        font-size: 1rem;
    }

        .qty-btn.minus {
            background: white;
            color: var(--gray-700);
            box-shadow: var(--shadow-sm);
        }

        .qty-btn.plus {
            background: linear-gradient(135deg, var(--primary) 0%, #6366f1 100%);
            color: white;
            box-shadow: var(--shadow-md);
        }

        .qty-btn:hover {
            transform: scale(1.1);
        }

        .qty-btn.minus:hover {
            background: var(--gray-200);
        }

        .qty-btn.plus:hover {
            box-shadow: var(--shadow-lg);
        }

    .qty-value {
        min-width: 40px;
        text-align: center;
        font-size: 1.1rem;
        font-weight: 700;
        color: var(--gray-900);
    }

    /* Item Total Section */
    .item-total-section {
        text-align: right;
        padding-left: 20px;
    }

    .item-total {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        margin-bottom: 8px;
    }

    .total-label {
        font-size: 0.8rem;
        color: var(--gray-500);
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .total-value {
        font-size: 1.5rem;
        font-weight: 800;
        background: linear-gradient(135deg, var(--primary) 0%, #6366f1 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .items-count {
        color: var(--gray-500);
        font-size: 0.85rem;
        display: block;
        margin-bottom: 12px;
    }

    .remove-btn {
        background: none;
        border: 2px solid var(--danger);
        color: var(--danger);
        padding: 8px 16px;
        border-radius: 50px;
        font-size: 0.85rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .remove-btn:hover {
            background: var(--danger);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(239, 68, 68, 0.4);
        }

    /* Order Summary */
    .order-summary {
        background: white;
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow-xl);
        overflow: hidden;
    }

    .summary-header {
        background: linear-gradient(135deg, var(--primary) 0%, #6366f1 50%, #8b5cf6 100%);
        color: white;
        padding: 20px 24px;
        font-size: 1.1rem;
        font-weight: 700;
    }

    .summary-body {
        padding: 24px;
    }

    .summary-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 12px 0;
    }

    .summary-label {
        color: var(--gray-500);
        font-size: 0.95rem;
    }

    .summary-value {
        font-weight: 600;
        color: var(--gray-700);
    }

    .free-shipping {
        color: var(--success);
        background: rgba(16, 185, 129, 0.1);
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.85rem;
    }

    .summary-divider {
        height: 2px;
        background: linear-gradient(90deg, transparent, var(--gray-200), transparent);
        margin: 16px 0;
    }

    .total-row {
        padding: 16px 0;
    }

    .total-label-big {
        font-size: 1.1rem;
        font-weight: 700;
        color: var(--gray-900);
    }

    .total-value-big {
        font-size: 1.75rem;
        font-weight: 800;
        background: linear-gradient(135deg, var(--primary) 0%, #6366f1 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    /* Action Buttons */
    .action-buttons {
        display: flex;
        flex-direction: column;
        gap: 12px;
        margin-top: 24px;
    }

    .btn-checkout {
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, var(--success) 0%, #059669 100%);
        color: white;
        padding: 16px 24px;
        border-radius: var(--radius-md);
        font-weight: 700;
        font-size: 1rem;
        text-decoration: none;
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px rgba(16, 185, 129, 0.4);
    }

        .btn-checkout:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(16, 185, 129, 0.5);
            color: white;
        }

    .btn-continue {
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--gray-100);
        color: var(--gray-700);
        padding: 14px 24px;
        border-radius: var(--radius-md);
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        border: 2px solid var(--gray-200);
    }

        .btn-continue:hover {
            background: white;
            border-color: var(--primary);
            color: var(--primary);
        }

    /* Trust Badges */
    .trust-badges {
        margin-top: 24px;
        padding-top: 24px;
        border-top: 2px solid var(--gray-100);
    }

    .trust-item {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 10px 0;
    }

    .trust-icon {
        width: 40px;
        height: 40px;
        border-radius: var(--radius-sm);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.1rem;
    }

        .trust-icon.secure {
            background: rgba(16, 185, 129, 0.1);
            color: var(--success);
        }

        .trust-icon.delivery {
            background: rgba(13, 110, 253, 0.1);
            color: var(--primary);
        }

        .trust-icon.returns {
            background: rgba(139, 92, 246, 0.1);
            color: #8b5cf6;
        }

    .trust-text {
        display: flex;
        flex-direction: column;
        font-size: 0.85rem;
    }

        .trust-text strong {
            color: var(--gray-700);
        }

        .trust-text span {
            color: var(--gray-500);
            font-size: 0.75rem;
        }

    /* Empty Cart Styles */
    .empty-cart-container {
        min-height: 60vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .empty-cart-content {
        text-align: center;
        max-width: 500px;
        padding: 40px 20px;
    }

    .empty-cart-animation {
        margin-bottom: 32px;
    }

    .cart-circle {
        position: relative;
        width: 180px;
        height: 180px;
        margin: 0 auto;
    }

    .cart-circle-inner {
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, var(--primary) 0%, #6366f1 50%, #8b5cf6 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        animation: float 4s ease-in-out infinite;
        box-shadow: 0 20px 40px rgba(99, 102, 241, 0.4);
    }

        .cart-circle-inner i {
            font-size: 4rem;
            color: white;
        }

    .floating-icons {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    .float-icon {
        position: absolute;
        width: 40px;
        height: 40px;
        background: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: var(--shadow-lg);
        color: var(--primary);
    }

        .float-icon.icon-1 {
            top: -10px;
            right: 10px;
            animation: floatIcon 3s ease-in-out infinite;
        }

        .float-icon.icon-2 {
            bottom: 10px;
            left: -10px;
            animation: floatIcon 3s ease-in-out infinite 0.5s;
        }

        .float-icon.icon-3 {
            top: 50%;
            right: -20px;
            animation: floatIcon 3s ease-in-out infinite 1s;
        }

