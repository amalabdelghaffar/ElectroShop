<script>
    $(document).ready(function() {
        // Animation des boutons
        $('.qty-btn, .remove-btn').on('mousedown', function() {
            $(this).css('transform', 'scale(0.95)');
        }).on('mouseup mouseleave', function() {
            $(this).css('transform', '');
        });

        // Confirmation stylisée pour la suppression
        $('.RemoveLink').click(function(e) {
            e.preventDefault();
            var productId = $(this).data('id');
            var $item = $(this).closest('.cart-item');
            var productName = $item.find('.product-name').text().trim();

            if (confirm(`Supprimer "${productName}" de votre panier ?`)) {
                // Animation de suppression
                $item.css({
                    'transform': 'translateX(100%)',
                    'opacity': '0'
                });
                setTimeout(() => {
                    // Ici, déclencher la vraie suppression
                    // $(this).trigger('actualRemove');
                }, 300);
            }
        });

        // Animation au scroll pour les éléments
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);

        document.querySelectorAll('.cart-item').forEach(item => {
            observer.observe(item);
        });

        // Effet de survol sur les trust badges
        $('.trust-item').hover(
            function() {
                $(this).find('.trust-icon').css('transform', 'scale(1.1) rotate(5deg)');
            },
            function() {
                $(this).find('.trust-icon').css('transform', '');
            }
        );
    });
</script>
