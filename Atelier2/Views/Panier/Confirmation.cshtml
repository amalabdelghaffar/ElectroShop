@model Atelier2.Models.Help.Order
@{
    ViewData["Title"] = "Confirmation de commande";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <!-- En-tête de confirmation -->
    <div class="text-center mb-5">
        <div class="success-animation mb-4">
            <div class="success-circle">
                <i class="bi bi-check-lg"></i>
            </div>
        </div>
        <h1 class="display-5 fw-bold text-success mb-3">
            Commande confirmée !
        </h1>
        <p class="lead text-muted">
            Merci pour votre commande. Un email de confirmation vous sera envoyé.
        </p>
        <p class="text-muted">
            Numéro de commande : <strong class="text-primary fs-4">#@Model.Id</strong>
        </p>
    </div>

    @if (Model != null)
    {
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="row g-4">
                    <!-- Informations client -->
                    <div class="col-md-6">
                        <div class="card shadow-sm border-0 h-100">
                            <div class="card-header bg-primary text-white py-3">
                                <h5 class="mb-0 fw-bold">
                                    <i class="bi bi-person-circle me-2"></i>Informations client
                                </h5>
                            </div>
                            <div class="card-body p-4">
                                <div class="mb-3">
                                    <label class="text-muted small">Nom</label>
                                    <p class="fw-bold mb-0">@Model.CustomerName</p>
                                </div>
                                <div class="mb-3">
                                    <label class="text-muted small">Email</label>
                                    <p class="fw-bold mb-0">@Model.Email</p>
                                </div>
                                <div class="mb-3">
                                    <label class="text-muted small">Adresse de livraison</label>
                                    <p class="fw-bold mb-0">@Model.Address</p>
                                </div>
                                <div class="mb-0">
                                    <label class="text-muted small">Date de commande</label>
                                    <p class="fw-bold mb-0">@Model.OrderDate.ToString("dd/MM/yyyy à HH:mm")</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Récapitulatif paiement -->
                    <div class="col-md-6">
                        <div class="card shadow-sm border-0 h-100">
                            <div class="card-header bg-success text-white py-3">
                                <h5 class="mb-0 fw-bold">
                                    <i class="bi bi-receipt me-2"></i>Récapitulatif
                                </h5>
                            </div>
                            <div class="card-body p-4">
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Nombre d'articles</span>
                                    <span class="fw-bold">@(Model.Items?.Count ?? 0)</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Frais de livraison</span>
                                    <span class="text-success fw-bold">Gratuit</span>
                                </div>
                                <hr>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="fs-5 fw-bold">Total payé</span>
                                    <span class="fs-4 fw-bold text-primary">@Model.TotalAmount.ToString("N2") DT</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Liste des articles commandés -->
                <div class="card shadow-sm border-0 mt-4">
                    <div class="card-header bg-white py-3 border-bottom">
                        <h5 class="mb-0 fw-bold">
                            <i class="bi bi-box-seam me-2 text-primary"></i>Articles commandés
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        @if (Model.Items != null && Model.Items.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th class="ps-4">Produit</th>
                                            <th class="text-center">Quantité</th>
                                            <th class="text-end">Prix unitaire</th>
                                            <th class="text-end pe-4">Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Items)
                                        {
                                            <tr>
                                                <td class="ps-4">
                                                    <div class="d-flex align-items-center">
                                                        <div class="bg-light rounded-circle d-flex align-items-center justify-content-center me-3"
                                                             style="width: 45px; height: 45px;">
                                                            <i class="bi bi-box text-primary"></i>
                                                        </div>
                                                        <span class="fw-bold">@item.ProductName</span>
                                                    </div>
                                                </td>
                                                <td class="text-center">
                                                    <span class="badge bg-primary rounded-pill px-3 py-2">@item.Quantity</span>
                                                </td>
                                                <td class="text-end">@item.Price.ToString("N2") DT</td>
                                                <td class="text-end pe-4 fw-bold text-success">
                                                    @((item.Price * item.Quantity).ToString("N2")) DT
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot class="table-light">
                                        <tr>
                                            <td colspan="3" class="text-end fw-bold fs-5">Total</td>
                                            <td class="text-end pe-4 fw-bold fs-5 text-primary">
                                                @Model.TotalAmount.ToString("N2") DT
                                            </td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="p-4 text-center text-muted">
                                <i class="bi bi-inbox fs-1"></i>
                                <p class="mt-2">Aucun article</p>
                            </div>
                        }
                    </div>
                </div>

                <!-- Boutons d'action -->
                <div class="d-flex justify-content-center gap-3 mt-5">
                    <a href="~/Product/Index" class="btn btn-primary btn-lg px-5">
                        <i class="bi bi-bag me-2"></i>Continuer mes achats
                    </a>
                    <a href="~/Home/Index" class="btn btn-outline-secondary btn-lg px-5">
                        <i class="bi bi-house me-2"></i>Accueil
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-exclamation-triangle text-warning" style="font-size: 4rem;"></i>
            <h3 class="mt-3">Commande introuvable</h3>
            <a href="~/Home/Index" class="btn btn-primary mt-3">
                <i class="bi bi-house me-2"></i>Retour à l'accueil
            </a>
        </div>
    }
</div>

<style>
    .success-circle {
        width: 120px;
        height: 120px;
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
        animation: scaleIn 0.5s ease-out;
        box-shadow: 0 10px 40px rgba(16, 185, 129, 0.4);
    }

        .success-circle i {
            font-size: 3.5rem;
            color: white;
        }

    @@keyframes scaleIn {
        from {
            transform: scale(0);
            opacity: 0;
        }

        to {
            transform: scale(1);
            opacity: 1;
        }
    }

    .card {
        border-radius: 12px;
    }
</style>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">