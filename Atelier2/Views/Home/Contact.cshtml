@model Atelier2.Models.ContactViewModel
@{
    ViewData["Title"] = "Contact";
}

<div class="container py-4 py-md-5">

    <!-- Bandeau titre -->
    <div class="row mb-4">
        <div class="col-lg-8">
            <h1 class="h3 fw-bold mb-2">Contactez-nous</h1>
            <p class="text-muted mb-0">
                Une question sur un produit, une commande ou un retour ?
                Remplissez le formulaire ou utilisez nos coordonnées ci-dessous.
            </p>
        </div>
    </div>

    <div class="row g-4">
        <!-- Colonne formulaire -->
        <div class="col-lg-7">
            @if (TempData["ContactSuccess"] != null)
            {
                <div class="alert alert-success">
                    @TempData["ContactSuccess"]
                </div>
            }

            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body p-4">
                    <h2 class="h5 fw-semibold mb-3">Formulaire de contact</h2>

                    <form asp-action="Contact" method="post" novalidate>
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Subject" class="form-label"></label>
                            <input asp-for="Subject" class="form-control" />
                            <span asp-validation-for="Subject" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Message" class="form-label"></label>
                            <textarea asp-for="Message" rows="5" class="form-control"></textarea>
                            <span asp-validation-for="Message" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="btn btn-success px-4">
                            <i class="bi bi-send me-1"></i> Envoyer
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Colonne infos + carte -->
        <div class="col-lg-5">
            <!-- Infos de contact -->
            <div class="card border-0 shadow-sm rounded-4 mb-3">
                <div class="card-body p-4">
                    <h2 class="h6 fw-semibold mb-3">Nos coordonnées</h2>

                    <div class="d-flex mb-3">
                        <div class="me-3">
                            <span class="badge rounded-circle bg-success-subtle text-success p-3">
                                <i class="bi bi-geo-alt"></i>
                            </span>
                        </div>
                        <div>
                            <div class="fw-semibold">Adresse</div>
                            <div class="small text-muted">
                                Sfax – Route de Tunis KM 4<br />
                                Tunisie
                            </div>
                        </div>
                    </div>

                    <div class="d-flex mb-3">
                        <div class="me-3">
                            <span class="badge rounded-circle bg-success-subtle text-success p-3">
                                <i class="bi bi-telephone"></i>
                            </span>
                        </div>
                        <div>
                            <div class="fw-semibold">Téléphone</div>
                            <div class="small text-muted">(+216) 21 49 12 99</div>
                        </div>
                    </div>

                    <div class="d-flex mb-3">
                        <div class="me-3">
                            <span class="badge rounded-circle bg-success-subtle text-success p-3">
                                <i class="bi bi-envelope"></i>
                            </span>
                        </div>
                        <div>
                            <div class="fw-semibold">E-mail</div>
                            <div class="small text-muted">support@electroshop.tn</div>
                        </div>
                    </div>

                    <div class="d-flex">
                        <div class="me-3">
                            <span class="badge rounded-circle bg-success-subtle text-success p-3">
                                <i class="bi bi-clock"></i>
                            </span>
                        </div>
                        <div>
                            <div class="fw-semibold">Horaires</div>
                            <div class="small text-muted">
                                Lun – Ven : 9h00 – 18h00<br />
                                Samedi : 9h00 – 13h00
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Carte (Google Maps) -->
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body p-0">
                    <div class="ratio ratio-4x3 rounded-4 overflow-hidden">
                        @* Remplace l'URL ci-dessous par ton iframe Google Maps *@
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3238.888!2d10.75!3d34.74!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0:0x0!2sSfax!5e0!3m2!1sfr!2stn!4v0000000000000"
                                style="border:0;" allowfullscreen="" loading="lazy"
                                referrerpolicy="no-referrer-when-downgrade">
                        </iframe>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
