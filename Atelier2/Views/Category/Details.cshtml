@model Atelier2.Models.Category

@{
    ViewData["Title"] = "Détails de la catégorie";
}

<div class="container py-5">
    <div class="card shadow-sm border-0 rounded-4 mx-auto" style="max-width: 600px;">
        <div class="card-header bg-transparent border-0 text-center">
            <h2 class="fw-bold text-primary mb-2">Détails de la catégorie</h2>
            <p class="text-muted mb-0">Informations sur la catégorie sélectionnée</p>
        </div>

        <div class="card-body px-4 py-4 text-center">
            <dl class="row justify-content-center">
                <dt class="col-sm-4 text-muted text-end">Nom :</dt>
                <dd class="col-sm-6 text-start fw-semibold text-dark">
                    @Html.DisplayFor(model => model.CategoryName)
                </dd>
            </dl>

            <!-- Boutons -->
            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.CategoryId"
                   class="btn btn-outline-primary btn-md custom-btn me-2">
                    <i class="bi bi-pencil"></i> Modifier
                </a>
                <a asp-action="Index"
                   class="btn btn-outline-secondary btn-md custom-btn">
                    <i class="bi bi-arrow-left"></i> Retour
                </a>
            </div>
        </div>
    </div>
</div>
