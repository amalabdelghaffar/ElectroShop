@model Atelier2.ViewModel.EditViewModel

@{
    ViewData["Title"] = "Modifier un produit";
    var photoPath = Url.Content("~/images/" + (Model.ExistingImagePath ?? "noimage.jpg"));
}

<div class="container py-4">
    <div class="card shadow-sm border-0 rounded-4 mx-auto" style="max-width: 700px;">
        <div class="card-header bg-transparent border-0 text-center">
            <h2 class="fw-bold text-primary mb-2">Modifier le produit</h2>
            <p class="text-muted mb-0">Mettez à jour les informations ci-dessous</p>
        </div>

        <div class="card-body px-4 py-3">
            <form asp-controller="Product" asp-action="Edit" enctype="multipart/form-data" method="post" class="needs-validation">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="ProductId" />
                <input type="hidden" asp-for="ExistingImagePath" />

                <!-- Nom -->
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold">Nom du produit</label>
                    <input asp-for="Name" class="form-control form-control-lg" placeholder="Entrez le nom du produit" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <!-- Prix -->
                <div class="mb-3">
                    <label asp-for="Price" class="form-label fw-semibold">Prix (Dinars)</label>
                    <input asp-for="Price" type="number" class="form-control form-control-lg" placeholder="Ex: 20" />
                    <span asp-validation-for="Price" class="text-danger small"></span>
                </div>

                <!-- Quantité -->
                <div class="mb-3">
                    <label asp-for="QteStock" class="form-label fw-semibold">Quantité en stock</label>
                    <input asp-for="QteStock" type="number" class="form-control form-control-lg" placeholder="Ex: 100" />
                    <span asp-validation-for="QteStock" class="text-danger small"></span>
                </div>

                <!-- Catégorie -->
                <div class="mb-3">
                    <label asp-for="CategoryId" class="form-label fw-semibold">Catégorie</label>
                    <select asp-for="CategoryId" class="form-select form-select-lg" asp-items="ViewBag.CategoryId">
                        <option value="">-- Sélectionnez une catégorie --</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger small"></span>
                </div>

                <!-- Image -->
                <div class="mb-4">
                    <label class="form-label fw-semibold">Image du produit</label>
                    <div class="d-flex flex-column align-items-center">
                        <img id="imageEmp" src="@photoPath" asp-append-version="true"
                             class="img-thumbnail shadow-sm mb-3"
                             style="max-height: 200px; object-fit: contain;" />
                        <input asp-for="Image" type="file" class="form-control w-75" id="imageInput" />
                        <label for="imageInput" class="form-text text-muted mt-1">
                            Cliquez ici pour choisir une nouvelle photo
                        </label>
                    </div>
                </div>

                <!-- Boutons -->
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-outline-success btn-md custom-btn px-3 me-2">
                        <i class="bi bi-check-circle"></i> Mettre à jour
                    </button>
                    <a asp-action="Index" asp-controller="Product" class="btn btn-outline-secondary btn-md custom-btn px-3">
                        <i class="bi bi-arrow-left"></i> Annuler
                    </a>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Affichage dynamique du nom de fichier + prévisualisation
        document.getElementById("imageInput").addEventListener("change", function (event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById("imageEmp").src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });
    </script>
}
