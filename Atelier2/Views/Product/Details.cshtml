@model Atelier2.Models.Product

@{
    ViewData["Title"] = "Détails";
    var photoPath = Url.Content("~/images/" + (Model.Image ?? "noimage.jpg"));
}

<div class="container py-4">
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-header bg-transparent border-0 text-center">
            <h2 class="fw-bold text-primary mb-1">@Model.Name</h2>
            <div class="d-flex justify-content-center flex-wrap gap-2 mt-2">
                <span class="badge bg-secondary-subtle text-dark px-3 py-2">Prix : @Model.Price</span>
                <span class="badge @(Model.QteStock > 0 ? "bg-success-subtle text-success fw-semibold" : "bg-danger fw-semibold") px-3 py-2">
                    Qté : @Model.QteStock
                </span>
                <span class="badge bg-secondary-subtle text-dark px-3 py-2">@Model.Category?.CategoryName</span>
            </div>
        </div>

        <div class="card-body px-4 py-3">
            <div class="text-center mb-4">
                <img src="@photoPath"
                     alt="@Model.Name"
                     class="img-fluid rounded shadow-sm"
                     style="max-height: 250px; object-fit: contain;">
            </div>

            <dl class="row justify-content-center mb-0">
                <dt class="col-sm-4 text-muted">Nom du produit :</dt>
                <dd class="col-sm-8 fw-semibold">@Model.Name</dd>

                <dt class="col-sm-4 text-muted">Prix :</dt>
                <dd class="col-sm-8 fw-semibold">@Model.Price</dd>

                <dt class="col-sm-4 text-muted">Quantité :</dt>
                <dd class="col-sm-8 fw-semibold">@Model.QteStock</dd>

                <dt class="col-sm-4 text-muted">Catégorie :</dt>
                <dd class="col-sm-8 fw-semibold">@Model.Category?.CategoryName</dd>
            </dl>
        </div>

        <div class="card-footer bg-transparent border-0 text-center py-3">
            <a asp-action="Edit" asp-route-id="@Model?.ProductId" class="btn btn-outline-primary px-4 me-2">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>
