                            </a>
                            <a href="#" class="es-social-link" title="Twitter">
                                <i class="bi bi-twitter-x"></i>
                            </a>
                        </div>
                    </div>

                    <!-- Liens Navigation -->
                    <div class="col-lg-2 col-md-6 mb-4">
                        <h6 class="es-footer-title">Navigation</h6>
                        <ul class="es-footer-links">
                            <li>
                                <a asp-controller="Home" asp-action="Index">
                                    <i class="bi bi-chevron-right"></i> Accueil
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Product" asp-action="Index">
                                    <i class="bi bi-chevron-right"></i> Produits
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Category" asp-action="Index">
                                    <i class="bi bi-chevron-right"></i> Catégories
                                </a>
