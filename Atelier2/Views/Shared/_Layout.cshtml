                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="es-footer-brand">
                            <a class="es-footer-logo" asp-controller="Home" asp-action="Index">
                                <div class="es-footer-logo-icon">
                                    <i class="bi bi-lightning-charge-fill"></i>
                                </div>
                                <span class="es-footer-logo-text">Electro<span>Shop</span></span>
                            </a>
