@model Atelier2.ViewModels.EditRoleViewModel

@{
    ViewBag.Title = "Modifier un rôle";
}

<div class="container d-flex justify-content-center align-items-start py-4" style="min-height: 90vh;">
    <div class="card shadow-lg p-4 w-100" style="max-width: 750px; border-radius: 15px;">
        <div class="text-center mb-4">
            <i class="bi bi-shield-lock text-primary" style="font-size: 3rem;"></i>
            <h3 class="fw-bold mt-2">Modifier un rôle</h3>
            <p class="text-muted mb-0">Mettez à jour les informations du rôle existant</p>
        </div>

        <form method="post">
            <div asp-validation-summary="All" class="text-danger small mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Id" class="form-label fw-semibold">Identifiant</label>
                <input asp-for="Id" disabled class="form-control bg-light text-muted" />
            </div>

            <div class="form-group mb-4">
                <label asp-for="RoleName" class="form-label fw-semibold">Nom du rôle</label>
                <div class="input-group">
                    <span class="input-group-text bg-light text-muted"><i class="bi bi-pencil"></i></span>
                    <input asp-for="RoleName" class="form-control" placeholder="Nom du rôle" />
                </div>
                <span asp-validation-for="RoleName" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="ListRoles" class="btn btn-outline-secondary rounded-pill px-4">
                    <i class="bi bi-arrow-left-circle"></i> Annuler
                </a>
                <button type="submit" class="btn btn-success rounded-pill px-4 shadow-sm">
                    <i class="bi bi-check-circle"></i> Mettre à jour
                </button>
            </div>
        </form>

        <!-- Liste des utilisateurs du rôle -->
        <div class="card mt-4 border-0 shadow-sm">
            <div class="card-header bg-primary text-white fw-semibold rounded-top">
                <i class="bi bi-people me-2"></i> Utilisateurs appartenant à ce rôle
            </div>

            <div class="card-body">
                @if (Model.Users.Any())
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var user in Model.Users)
                        {
                            <li class="list-group-item d-flex align-items-center">
                                <i class="bi bi-person-circle text-success me-2"></i> @user
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted mb-0">Aucun utilisateur n’est actuellement associé à ce rôle.</p>
                }
            </div>

            <div class="card-footer text-center bg-light">
                <a asp-controller="Admin"
                   asp-action="EditUsersInRole"
                   asp-route-roleId="@Model.Id"
                   class="btn btn-primary rounded-pill px-4">
                    <i class="bi bi-person-add"></i> Gérer les utilisateurs
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
