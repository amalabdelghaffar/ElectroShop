@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "Liste des rôles";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary mb-0">
            <i class="bi bi-shield-lock"></i> Gestion des rôles
        </h2>
        <a class="btn btn-success rounded-pill shadow-sm" asp-controller="Admin" asp-action="CreateRole">
            <i class="bi bi-plus-circle"></i> Créer un rôle
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="card text-center shadow-sm border-0">
            <div class="card-body py-5">
                <i class="bi bi-info-circle text-muted" style="font-size: 2.5rem;"></i>
                <p class="text-muted mt-3 fs-5">Aucun rôle n’a encore été créé.</p>
                <a asp-controller="Admin" asp-action="CreateRole" class="btn btn-success rounded-pill mt-2 px-4">
                    <i class="bi bi-plus-lg"></i> Ajouter un rôle
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var role in Model)
            {
                <div class="col-md-4">
                    <div class="card role-card shadow-sm border-0 h-100">
                        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top">
                            <span><i class="bi bi-person-badge"></i> <strong>@role.Name</strong></span>
                        </div>

                        <div class="card-body">
                            <p class="text-muted mb-2"><strong>ID :</strong> @role.Id</p>
                            <p class="small text-secondary mb-0">
                                <i class="bi bi-people"></i> Rôle système attribuable aux utilisateurs.
                            </p>
                        </div>

                        <div class="card-footer bg-light text-end rounded-bottom">
                            <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post" class="d-inline">
                                <a asp-action="EditRole" asp-route-id="@role.Id"
                                   class="btn btn-outline-primary btn-sm rounded-pill px-3 me-2">
                                    <i class="bi bi-pencil-square"></i> Modifier
                                </a>
                                <button type="submit" class="btn btn-outline-danger btn-sm rounded-pill px-3">
                                    <i class="bi bi-trash3"></i> Supprimer
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/CustomScript.js"></script>
}
