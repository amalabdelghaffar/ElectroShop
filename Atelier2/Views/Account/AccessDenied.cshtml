@{
    ViewData["Title"] = "Access Denied";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="text-center">
        <div class="mb-3">
            <i class="bi bi-shield-exclamation text-danger" style="font-size: 4rem;"></i>
        </div>

        <h1 class="fw-bold text-danger mb-2">Accès refusé</h1>
        <p class="text-muted mb-4 fs-5">
            Vous n’avez pas la permission d’accéder à cette ressource.
        </p>

        <img src="/images/noacess.jpg" alt="Accès refusé" class="img-fluid rounded shadow-sm mb-4"
             style="max-height: 260px; border: 4px solid #f8d7da;" />

        <div>
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary rounded-pill px-4 me-2">
                <i class="bi bi-house-door"></i> Retour à l’accueil
            </a>
            <a asp-controller="Account" asp-action="Login" class="btn btn-success rounded-pill px-4">
                <i class="bi bi-box-arrow-in-right"></i> Se connecter
            </a>
        </div>
    </div>
</div>
