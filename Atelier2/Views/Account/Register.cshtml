@model TP3_Identity.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "User Registration";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 85vh;">
    <div class="card shadow-lg p-4" style="width: 420px; border-radius: 15px;">
        <div class="text-center mb-3">
            <i class="bi bi-person-plus-fill text-success" style="font-size: 3rem;"></i>
            <h3 class="fw-bold mt-2">Créer un compte</h3>
            <p class="text-muted mb-0">Inscrivez-vous pour continuer</p>
        </div>

        <form method="post">
            <div asp-validation-summary="All" class="text-danger small mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label fw-semibold">Adresse e-mail</label>
                <div class="input-group">
                    <span class="input-group-text bg-light text-muted"><i class="bi bi-envelope"></i></span>
                    <input asp-for="Email" class="form-control" placeholder="Entrez votre e-mail" />
                </div>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label fw-semibold">Mot de passe</label>
                <div class="input-group">
                    <span class="input-group-text bg-light text-muted"><i class="bi bi-lock"></i></span>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Créez un mot de passe" />
                </div>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="ConfirmPassword" class="form-label fw-semibold">Confirmer le mot de passe</label>
                <div class="input-group">
                    <span class="input-group-text bg-light text-muted"><i class="bi bi-shield-lock"></i></span>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirmez le mot de passe" />
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-success btn-lg rounded-pill shadow-sm">
                    <i class="bi bi-person-check me-1"></i> S'inscrire
                </button>
            </div>

            <div class="text-center mt-3">
                <p class="text-muted small mb-1">Vous avez déjà un compte ?</p>
                <a asp-controller="Account" asp-action="Login" class="text-decoration-none fw-semibold text-primary">
                    <i class="bi bi-box-arrow-in-right"></i> Se connecter
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
