@model Atelier2.ViewModels.LoginViewModel
@{
    ViewBag.Title = "User Login";
    var returnUrl = Context.Request.Query["ReturnUrl"];
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 85vh;">
    <div class="card shadow-lg p-4" style="width: 420px; border-radius: 15px;">
        <div class="text-center mb-3">
            <i class="bi bi-person-circle text-primary" style="font-size: 3rem;"></i>
            <h3 class="fw-bold mt-2">Connexion</h3>
            <p class="text-muted mb-0">Accédez à votre compte</p>
        </div>

        <form asp-route-returnurl="@returnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger small mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label fw-semibold">Adresse e-mail</label>
                <div class="input-group">
                    <span class="input-group-text bg-light text-muted"><i class="bi bi-envelope"></i></span>
                    <input asp-for="Email" class="form-control" placeholder="Entrez votre e-mail" />
                </div>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label fw-semibold">Mot de passe</label>
                <div class="input-group">
                    <span class="input-group-text bg-light text-muted"><i class="bi bi-lock"></i></span>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Entrez votre mot de passe" />
                </div>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label">@Html.DisplayNameFor(m => m.RememberMe)</label>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg rounded-pill shadow-sm">
                    <i class="bi bi-box-arrow-in-right me-1"></i> Se connecter
                </button>
            </div>

            <div class="text-center mt-3">
                <p class="text-muted small mb-1">Vous n'avez pas de compte ?</p>
                <a asp-controller="Account" asp-action="Register" class="text-decoration-none fw-semibold text-primary">
                    <i class="bi bi-person-plus"></i> Créer un compte
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
